@model ChildHealthBook.Web.Models.EventDtos.WebMedicalEventCreateDto
@{
    var id = ViewContext.RouteData.Values["id"];
}
<form asp-action="MedicalEventCreate" asp-route-id=@id>
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Add new medical event</h1>

        <hr />
        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-2">
                <label asp-for="DateOfEvent" class="control-label pt-2" style="font-size:20px;">Date</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="DateOfEvent" class="form-control" />
                <span asp-validation-for="DateOfEvent" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="EventTitle" class="control-label pt-2" style="font-size:20px;">Examination title</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="EventTitle" class="form-control">
                <span asp-validation-for="EventTitle" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="EventType" class="control-label pt-2" style="font-size:20px;">Event Type</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="EventType" class="form-control">
                <span asp-validation-for="EventType" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="Comment" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Comment" class="form-control" />
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>
            <div class="col-5 offset-2">
                <a asp-action="ChildDetails" asp-route-id=@id class="btn-primary btn form-control ">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Create" class="btn btn-success form-control" />
            </div>
        </div>
        <div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
