@model ChildHealthBook.Web.Models.ChildDtos.WebChildCreateDto


<form asp-action="ChildCreate">
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Add new child</h1>

        <hr />
        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-2">
                <label asp-for="FullName" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="DateOfBirth" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="DateOfBirth" class="form-control" />
                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="CurrentWeight" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="CurrentWeight" class="form-control">
                <span asp-validation-for="CurrentWeight" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="CurrentHeight" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="CurrentHeight" class="form-control" />
                <span asp-validation-for="CurrentHeight" class="text-danger"></span>
            </div>
            <div class="col-5 offset-2">
                <a asp-action="ChildrenIndex" class="btn-primary btn form-control">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Create" class="btn btn-success form-control" />
            </div>
        </div>
        <div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
